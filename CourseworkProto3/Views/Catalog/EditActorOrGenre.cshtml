@using Library.Data.Repo
@using Library.Models.DTO
@using Library.Models.Entities
@model EditActorOrGenreRequest

@inject ProductRepository _productRepository

@{
    var type = Model.Type switch
    {
        "book" => "жанр книги",
        "music" => "жанр музики",
        "movie" => "жанр фільму",
        "game" => "жанр гри",
        "actor" => "актора фільму",
        _ => "продукт"
    };
    ViewData["Title"] = "Редагувати";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Редагувати @type</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post" asp-action="EditActorOrGenre">
                        <input type="hidden" asp-for="@Model.Id" />
                        <input type="hidden" asp-for="@Model.Type" />

                        <div class="form-group">
                            <label asp-for="@Model.Name" class="control-label">Назва</label>
                            <input asp-for="@Model.Name" class="form-control" />
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Редагувати" class="btn btn-primary btn-lg px-4" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@using Library.Models.Entities

<div class="card mb-4">
    <div class="card-header">Пошук продуктів</div>
    <div class="card-body">
        <form method="get" asp-controller="Catalog" asp-action="Index" id="searchProductForm">
            <div class="form-group">
                <label for="name">Назва</label>
                <input type="text" class="form-control" name="name" form="searchProductForm" placeholder="Введіть назву" />
            </div>
            <div class="form-group">
                <label for="type">Тип продукту</label>
                <select class="form-control" name="type" form="searchProductForm">
                    <option value="">Всі</option>
                    <option value="book">Книга</option>
                    <option value="game">Гра</option>
                    <option value="music">Музика</option>
                    <option value="movie">Фільм</option>
                </select>
            </div>
            <div class="form-group">
                <label for="state">Стан</label>
                <select class="form-control" name="state" form="searchProductForm">
                    <option value="">Всі</option>
                    <option value="borrowed">Позичений</option>
                    <option value="ordered">Замовлений</option>
                </select>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="owns" form="searchProductForm" />
                <label for="owns" class="form-check-label">Чи належить мені?</label>
            </div>
            <input type="submit" form="searchProductForm" class="btn btn-primary mt-2" value="Пошук" />
        </form>
    </div>
</div>

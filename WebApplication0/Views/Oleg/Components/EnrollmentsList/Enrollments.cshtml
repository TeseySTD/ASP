@model IEnumerable<WebApplication0.Models.Enrollment>;

@if(Model != null){
<div class="table-responsive" style="max-height: 450px;">
    <img src="\images\oleg_eblo_wow.png" asp-append-version="true"/>
    <table class="table table-hover " >
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EnrollmentID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Course)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Grade)
                </th>
                <th>
                    Functions
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    @{
                        ViewData["enrollmentID"]=@item.EnrollmentID;
                    }
                    <a asp-action="Edit" asp-route-enrollmentID="@item.EnrollmentID">Edit</a> |
                    <a asp-action="Delete" asp-route-enrollmentID="@item.EnrollmentID">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
}
